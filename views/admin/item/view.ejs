<%- include('../../partials/header.ejs') %>
  
  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include('../../partials/navbar.ejs') %> 

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../partials/message.ejs') %>

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Item</h1>
          <!-- End Heading -->

          <% if (action == 'view') { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#showItem" role="tab" aria-controls="showItem" aria-selected="true">Show Item</a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#addItem" role="tab" aria-controls="addItem" aria-selected="false">Add Item</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('../../admin/item/showItem.ejs') %>
              <%- include('../../admin/item/addItem.ejs') %>
            </div>
        
          <% } else if (action == 'show image') { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#showImageItem" role="tab" aria-controls="showImageItem" aria-selected="true">Show Image Item</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('../../admin/item/showImageItem.ejs') %>
            </div>
          <% } else if (action == 'edit') { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#editItem" role="tab" aria-controls="editItem" aria-selected="true">Edit Item</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('../../admin/item/editItem.ejs') %>
            </div>
          <% } %>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <%- include('../../partials/footer.ejs') %> 

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
  <script>
    CKEDITOR.replace('description');
  </script>

<%- include('../../partials/js.ejs') %>
