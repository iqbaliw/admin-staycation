<%- include('../../../partials/header.ejs') %>
  
  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('../../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include('../../../partials/navbar.ejs') %> 

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../../partials/message.ejs') %>

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Detail Item</h1>
          <!-- End Heading -->

          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#showFeature" role="tab" aria-controls="showFeature" aria-selected="true">Show Feature</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#showActivity" role="tab" aria-controls="showActivity" aria-selected="false">Show Activity</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('showFeature.ejs') %>
            <%- include('showActivity.ejs') %>
            <%- include('editFeature.ejs') %>
            <%- include('editActivity.ejs') %>
          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <%- include('../../../partials/footer.ejs') %> 

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include('../../../partials/js.ejs') %>

  <script>
    $('#dataTable').on('click', '.btn-edit', function () {
      let id = $(this).data('id');
      let name = $(this).data('name');
      let qty = $(this).data('qty');
      $('#editFeature').modal('show');
      $('.name').val(name);
      $('.qty').val(qty);
      $('.id').val(id);
    });

    $('#dataTableActivity').on('click', '.btn-edit', function () {
      let id = $(this).data('id');
      let name = $(this).data('name');
      let type = $(this).data('type');
      $('#editActivity').modal('show');
      $('.name').val(name);
      $('.type').val(type);
      $('.id').val(id);
    });
  </script>