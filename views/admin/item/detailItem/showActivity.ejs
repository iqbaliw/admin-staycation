<div class="tab-pane fade" id="showActivity" role="tabpanel" aria-labelledby="show-item-tab">
  <div class="card shadow mb-4 mt-2">
      <div class="card-body">
        <div class="row">
          <div class="col-md-5">
            <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="title">Name</label>
                <input type="text" class="form-control" name="name" required>
              </div>
              <div class="form-group">
                <label for="name">Type</label>
                <input type="text" class="form-control" name="type" required>
              </div>
              <div class="form-group">
                <label for="image">Image</label>
                <input type="file" class="form-control" name="image" required>
              </div>
              <div class="form-group">
                <input type="hidden" name="itemId" value="<%= itemId %>">
                <button type="submit" class="btn btn-primary btn-sm">Add</button>
                <a href="/admin/item/" class="btn btn-warning btn-sm">Back</a>
              </div>
            </form>
          </div>

          <div class="col-md-7">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Image</th>
                    <th>Action</th>
                  </tr>
                </thead>
                
                <tbody>
                  <% for( let idxFtr = 0; idxFtr < activity.length; idxFtr++ ) { %>
                    <tr>
                      <td><%= idxFtr +1 %></td>
                      <td><%= activity[idxFtr].name %></td>
                      <td><%= activity[idxFtr].type %></td>
                      <td><img src="/<%= activity[idxFtr].imageUrl %>"  alt="<%= activity[idxFtr].name %>" style="width: 50px;"></td>
                      <td>
                        <form action="/admin/item/<%= itemId %>/activity/<%= activity[idxFtr].id %>/delete?_method=DELETE" method="POST">
                          <a href="javascript:void()" type="button" class="btn btn-sm btn-warning btn-circle btn-edit" data-id="<%= activity[idxFtr].id %>" data-name="<%= activity[idxFtr].name%>" data-type="<%= activity[idxFtr].type %>"><i class="fas fa-edit"></i></a>
                          <button type="submit" class="btn btn-sm btn-danger btn-circle"><i class="fas fa-trash"></i></button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>